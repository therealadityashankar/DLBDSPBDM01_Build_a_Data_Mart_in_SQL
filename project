#!/bin/bash

# Simple script runner
# Usage: ./project <script_name> [args...]
# Runs scripts/<script_name>.sh with additional arguments

if [ $# -eq 0 ]; then
    echo "Usage: $0 <script_name> [args...]"
    echo "Runs scripts/<script_name>.sh with additional arguments"
    exit 1
fi

SCRIPT_NAME="$1"
SCRIPT_PATH="scripts/${SCRIPT_NAME}.sh"

if [ ! -f "$SCRIPT_PATH" ]; then
    echo "Error: Script '$SCRIPT_PATH' not found"
    exit 1
fi

# Shift to remove the script name, leaving only the arguments
shift

echo "Running $SCRIPT_PATH..."
bash "$SCRIPT_PATH" "$@"
echo "Done!"